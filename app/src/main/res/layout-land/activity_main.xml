<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/my_title"
        style="@style/myTitle"
        android:text="@string/my_nanodegree_apps" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_popular_movies"
                style="@style/mButtons"
                android:text="@string/popular_movies" />

            <Button
                android:id="@+id/btn_stock_hawk"
                style="@style/mButtons"
                android:text="@string/stock_hawk" />

            <Button
                android:id="@+id/btn_build_it_bigger"
                style="@style/mButtons"
                android:text="@string/build_it_bigger" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_make_material"
                style="@style/mButtons"
                android:text="@string/make_your_app_material" />

            <Button
                android:id="@+id/btn_go_obiquitous"
                style="@style/mButtons"
                android:text="@string/go_obiquitous" />

            <Button
                android:id="@+id/btn_capstone"
                style="@style/specialButton"
                android:text="@string/capstone_my_own_app" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>